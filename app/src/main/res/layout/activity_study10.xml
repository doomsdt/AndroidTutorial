<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_study10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.soapcopy.tutorial.Study10">

    <RelativeLayout
        android:id="@+id/s09_rlSingers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/s09_iv1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/iu"
            android:scaleType="centerCrop"/>


        <ImageView
            android:id="@+id/s09_iv2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/krystal"
            android:scaleType="centerCrop"
            android:layout_toRightOf="@id/s09_iv1"/>



        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/s09_iv1">

            <RadioButton
                android:id="@+id/s09_rb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가수 1"
                android:layout_marginRight="40dp"/>

            <RadioButton
                android:id="@+id/s09_rb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가수 2"/>

        </RadioGroup>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/s09_rlInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/s09_rlSingers">

        <EditText
            android:id="@+id/s09_et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름"/>

        <EditText
            android:id="@+id/s09_et_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/s09_et_name"
            android:hint="나이"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@id/s09_et_age">

            <Button
                android:id="@+id/s09_bt_setInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설정" />

            <Button
                android:id="@+id/s09_bt_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닫기" />

        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>
